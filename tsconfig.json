{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["es2015.collection", "es2015.iterable", "DOM", "ES2015"],
    "moduleResolution": "Node",
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "jsx": "react",
    "outDir": "./dist/esm",
    "isolatedModules": true,
    "declaration": true,
    "downlevelIteration": true
  },
  "include": ["./src"]
}
