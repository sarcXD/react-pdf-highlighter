{
  "private": true,
  "name": "react-pdf-highlighter-monorepo",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean && lerna run clean",
    "start": "lerna run build --scope=react-pdf-highlighter && lerna run start --scope=example",
    "test": "npm run flow && lerna run test",
    "flow": "flow",
    "deploy": "npm run build && gh-pages --dist ./demo/dist --branch gh-pages",
    "prettier": "prettier --write 'src/**/*.js' 'demo/src/**/*.js'",
    "postinstall": "npm run bootstrap"
  },
  "devDependencies": {
    "flow-bin": "^0.73.0",
    "gh-pages": "0.11.0",
    "lerna": "^3.20.2"
  }
}
